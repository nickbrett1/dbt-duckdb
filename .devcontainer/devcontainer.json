// For format details, see https://aka.ms/devcontainer.json. For config options, see the
// README at: https://github.com/devcontainers/templates/tree/main/src/python
{
	"name": "Python 3",
	// Or use a Dockerfile or Docker Compose file. More info: https://containers.dev/guide/dockerfile
	"image": "mcr.microsoft.com/devcontainers/python:1-3.13-bookworm",
	// Needed to work around https://github.com/microsoft/vscode-remote-release/issues/7029
	"runArgs": [
		"--sysctl",
		"net.ipv6.conf.all.disable_ipv6=1"
	],
	"features": {
		"ghcr.io/eitsupi/devcontainer-features/duckdb-cli:1": {},
		"ghcr.io/itsmechlark/features/postgresql:1": {
			"version": "latest"
		},
		"ghcr.io/devcontainers-extra/features/rclone:1": {}
	},
	"customizations": {
		"vscode": {
			"files.associations": {
				"*.yaml": "jinja-yaml",
				"*.yml": "jinja-yaml",
				"*.sql": "jinja-sql",
				"*.md": "jinja-md"
			},
			"extensions": [
				"bastienboutonnet.vscode-dbt",
				"ritwickdey.LiveServer"
			]
		}
	},
	// Features to add to the dev container. More info: https://containers.dev/features.
	// "features": {},
	// Use 'forwardPorts' to make a list of ports inside the container available locally.
	// "forwardPorts": [],
	// Use 'postCreateCommand' to run commands after the container is created.
	"postCreateCommand": "sudo bash .devcontainer/setup-postgres.sh && pip install --upgrade pip && pip install dbt-core && pip3 install --user -r requirements.txt"
	// Configure tool-specific properties.
	// "customizations": {},
	// Uncomment to connect as root instead. More info: https://aka.ms/dev-containers-non-root.
	// "remoteUser": "root"
}