// For format details, see https://aka.ms/devcontainer.json. For config options, see the
// README at: https://github.com/devcontainers/templates/tree/main/src/python
{
	"name": "Python 3",
	// Or use a Dockerfile or Docker Compose file. More info: https://containers.dev/guide/dockerfile
	"image": "mcr.microsoft.com/devcontainers/python:1-3.13-bookworm",
	// Needed to work around https://github.com/microsoft/vscode-remote-release/issues/7029
	"runArgs": [
		"--sysctl",
		"net.ipv6.conf.all.disable_ipv6=1"
	],
	// Use 'forwardPorts' to make a list of ports inside the container available locally.
	// 5432 is the default port for PostgreSQL.
	"forwardPorts": [
		5432
	],
	// Features to add to the dev container. More info: https://containers.dev/features.
	"features": {
		"ghcr.io/eitsupi/devcontainer-features/duckdb-cli:1": {},
		"ghcr.io/itsmechlark/features/postgresql:1": {
			"version": "latest"
		},
		"ghcr.io/devcontainers-extra/features/rclone:1": {},
		"ghcr.io/warrenbuckley/codespace-features/sqlite:latest": {},
		"ghcr.io/devcontainers/features/node:1": {},
		"ghcr.io/itsmechlark/features/doppler:2": {}
	},
	"containerEnv": {
		"RCLONE_CONFIG": "/workspaces/dbt-duckdb/rclone.conf"
	},
	"customizations": {
		"vscode": {
			"files.associations": {
				"*.yaml": "jinja-yaml",
				"*.yml": "jinja-yaml",
				"*.sql": "jinja-sql",
				"*.md": "jinja-md"
			},
			"extensions": [
				"bastienboutonnet.vscode-dbt",
				"ritwickdey.LiveServer",
				"CircleCI.circleci",
				"innoverio.vscode-dbt-power-user",
				"henriblancke.vscode-dbt-formatter"
			]
		}
	},
	// Use 'postCreateCommand' to run commands after the container is created.
	// dbt-core, dbt-postgres and dbt-duckdb are installed here early so it's picked up by the dbt vscode extension.
	"postCreateCommand": "/bin/bash -c 'if ! doppler me >/dev/null 2>&1; then doppler login --no-check-version --no-timeout --yes && doppler setup --no-interactive; fi; sudo bash .devcontainer/setup-postgres.sh; pip install --upgrade pip; pip install dbt-core dbt-postgres dbt-duckdb; pip3 install --user -r requirements.txt; yes | npx wrangler@latest login'"
	// Configure tool-specific properties.
	// "customizations": {},
	// Uncomment to connect as root instead. More info: https://aka.ms/dev-containers-non-root.
	// "remoteUser": "root"
}